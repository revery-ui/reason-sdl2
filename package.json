{
  "name": "reason-sdl2",
  "version": "2.10.3016",
  "description": "SDL2 bindings for OCaml",
  "license": "MIT",
  "scripts": {
    "format": "esy dune build @fmt --auto-promote",
    "run": "esy '@example' x test_sdl2",
    "build:byte": "esy '@example' b dune build bin_native/test_sdl2.bc"
  },
  "esy": {
    "build": [
      [
        "dune",
        "build",
        "-p",
        "sdl2"
      ]
    ],
    "install": [
      "esy-installer sdl2.install"
    ]
  },
  "dependencies": {
    "@opam/dune": "^1.7.3",
    "@esy-ocaml/reason": "^3.3.7",
    "refmterr": "^3.1.0",
    "@opam/lwt": "^4.0.0",
    "@opam/lwt_ppx": "^1.1.0",
    "esy-sdl2": "^2.0.10005",
    "esy-cmake": "^0.3.4",
    "reason-gl-matrix": "^0.9.9306"
  },
  "resolutions": {
    "@opam/cmdliner": "1.0.2"
  },
  "devDependencies": {
    "ocaml": ">=4.6.0 <4.9.0"
  }
}
